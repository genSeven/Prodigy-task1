import re

def check_password_strength(password):

    score = 0
    feedback = []

    # 1. Check Length (Required)
    min_length = 8
    if len(password) >= min_length:
        score += 1
    else:
        feedback.append(f"âŒ Password must be at least {min_length} characters long.")

    # 2. Check for Uppercase Letters
    if re.search(r"[A-Z]", password):
        score += 1
    else:
        feedback.append("âŒ Password should contain at least one uppercase letter (A-Z).")

    # 3. Check for Lowercase Letters
    if re.search(r"[a-z]", password):
        score += 1
    else:
        feedback.append("âŒ Password should contain at least one lowercase letter (a-z).")

    # 4. Check for Digits
    if re.search(r"\d", password):
        score += 1
    else:
        feedback.append("âŒ Password should contain at least one digit (0-9).")

    # 5. Check for Special Characters
    # Define a set of common special characters
    special_chars = r"[!@#$%^&*()_\-+=\[\]{}|;:'\",.<>/?`~]"
    if re.search(special_chars, password):
        score += 1
    else:
        feedback.append(f"âŒ Password should contain at least one special character (e.g., {special_chars.replace('r', '').strip('[]')}).")

    return {"score": score, "feedback": feedback}

